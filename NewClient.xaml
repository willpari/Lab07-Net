<Window x:Class="DemoCapas.NewClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoCapas"
        mc:Ignorable="d"
        Title="Nuevo Cliente" Height="450" Width="800">
    <Grid>
        <Label Content="Client's Name:" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="150,20,0,0" VerticalAlignment="Top" Width="300"/>

        <Label Content="Client's Address:" HorizontalAlignment="Left" Margin="20,40,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAddress" HorizontalAlignment="Left" Margin="150,40,0,0" VerticalAlignment="Top" Width="300"/>

        <Label Content="Client's Phone" HorizontalAlignment="Left" Margin="20,60,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPhone" HorizontalAlignment="Left" Margin="150,60,0,0" VerticalAlignment="Top" Width="300"/>

        <Button Content="Guardar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="40" Margin="20,100,0,0" Click="Button_Click"/>

        <Button Content="Retornar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="40" Margin="150,100,0,0" Click="Return"/>

    </Grid>
</Window>
